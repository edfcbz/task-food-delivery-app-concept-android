<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.skipthedishes.skipthedishesfooddelivery.SettingsActivity"
    android:background="@color/background_skip">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonBackId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background_skip" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSaveId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_skip" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced"
        android:id="@+id/buttonAdvancedId"
        android:layout_alignTop="@+id/buttonSaveId"
        android:layout_centerHorizontal="true"
        android:background="@color/background_skip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="_________________________________________"
        android:id="@+id/textView2"
        android:layout_above="@+id/buttonBackId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView5"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/buttonBackId"
        android:layout_toEndOf="@+id/buttonBackId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:id="@+id/textView7"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login:"
        android:id="@+id/textView8"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editTextLoginId"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country:"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Province:"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:id="@+id/textView12"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip Food Delivery"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="#030303"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonSaveId"
        android:layout_alignEnd="@+id/buttonSaveId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="URL"
        android:id="@+id/labelUrlId"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNameId"
        android:layout_alignTop="@+id/textView5"
        android:background="#b9b1b1"
        android:layout_alignRight="@+id/buttonSaveId"
        android:layout_alignEnd="@+id/buttonSaveId"
        android:layout_alignLeft="@+id/buttonAdvancedId"
        android:layout_alignStart="@+id/buttonAdvancedId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddressId"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/editTextNameId"
        android:layout_alignEnd="@+id/editTextNameId"
        android:layout_alignLeft="@+id/editTextNameId"
        android:layout_alignStart="@+id/editTextNameId"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmailId"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/editTextAddressId"
        android:layout_alignStart="@+id/editTextAddressId"
        android:layout_alignRight="@+id/editTextAddressId"
        android:layout_alignEnd="@+id/editTextAddressId"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLoginId"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/editTextEmailId"
        android:layout_alignEnd="@+id/editTextEmailId"
        android:layout_alignLeft="@+id/editTextEmailId"
        android:layout_alignStart="@+id/editTextEmailId"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPasswordId"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/editTextLoginId"
        android:layout_alignStart="@+id/editTextLoginId"
        android:background="#b9b1b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imputTextUrlId"
        android:layout_alignBottom="@+id/labelUrlId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editTextPasswordId"
        android:layout_alignStart="@+id/editTextPasswordId"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCountryId"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/editTextPasswordId"
        android:layout_alignStart="@+id/editTextPasswordId"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextProvinceId"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/editTextCountryId"
        android:layout_alignStart="@+id/editTextCountryId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#b9b1b1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCityId"
        android:layout_above="@+id/labelUrlId"
        android:layout_alignLeft="@+id/editTextProvinceId"
        android:layout_alignStart="@+id/editTextProvinceId"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:background="#b9b1b1" />

</RelativeLayout>
